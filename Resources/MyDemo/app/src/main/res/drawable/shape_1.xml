<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle"> <!-- 默认矩形，可省略 -->

    <!-- 纯色填充 -->
    <solid android:color="#2BC0A9" />
    <size android:height="100dp" android:width="200dp"/>

    <!-- 圆角（统一设置 8dp，也可单独设置某个角） -->
    <corners android:radius="12dp" />

    <!-- 白色边框（宽度 1dp） -->
<!--    <stroke-->
<!--        android:width="1dp"-->
<!--        android:color="#FFFFFF" />-->

    <!-- 内边距（若作为按钮背景，控制文字与边框的间距） -->
    <padding
        android:left="16dp"
        android:top="8dp"
        android:right="16dp"
        android:bottom="8dp" />
</shape>