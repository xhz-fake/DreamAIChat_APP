<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 渐变（从蓝色到青色） -->
    <gradient
        android:angle="180"
        android:endColor="#2BC0A9"
        android:startColor="#2B8AC6"
        android:type="linear" />
    <!-- 水平渐变（180度） -->

    <!-- 圆角（与输入框适配） -->
    <corners android:radius="4dp" />

    <!-- 输入框内边距（文字与边框间距） -->
    <padding
        android:bottom="8dp"
        android:left="12dp"
        android:right="12dp"
        android:top="8dp" />

</shape>