<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- 垂直 Guideline：初始为 30% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.30" />

    <!-- 水平 Guideline：初始为 40% -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <!-- 左侧面板（蓝色）：位于父 start 与垂直 Guideline 之间，且在水平 Guideline 之上 -->
    <View
        android:id="@+id/left_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_purple"
        app:layout_constraintBottom_toTopOf="@id/guideline_h"
        app:layout_constraintEnd_toStartOf="@id/guideline_v"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 右上面板（橙色）：位于垂直 Guideline 与父 end 之间，且在水平 Guideline 之上 -->
    <View
        android:id="@+id/right_top_panel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintBottom_toTopOf="@id/guideline_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guideline_v"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 文本：显示当前垂直 Guideline 百分比 -->
    <TextView
        android:id="@+id/txt_v_percent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="@string/initial_v_percent"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_h" />

    <!-- SeekBar：调整垂直 Guideline 百分比到 [10%..90%] -->
    <SeekBar
        android:id="@+id/seek_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:max="80"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:progress="20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_v_percent" />
    <!-- Button：切换水平 Guideline 在 40% 与 60% 之间 -->
    <Button
        android:id="@+id/btn_toggle_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/btn_toggle_h"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seek_vertical" />

</androidx.constraintlayout.widget.ConstraintLayout>
